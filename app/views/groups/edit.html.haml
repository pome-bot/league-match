.wrapper-group-edit
  = render "application/header"
  = render "application/header-league", group: @group, users: @group.users.order(name: "ASC")
  .main-group-edit
    .main-group-edit__contents
      %h2 Edit group
      = render partial: 'form_group', locals: { group: @group }
      .other-btns
        = link_to :back, class: "back-btn btn-wrapper" do
          %button.button-gray<>Back
        = link_to group_path(@group.id), method: :delete, data: { confirm: "Are you sure?" }, class: "cancel-btn btn-wrapper" do
          %button.button-red<>Cancel group
  = render "application/footer"
