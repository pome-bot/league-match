.wrapper-sign-in
  %header
    %h1<>League Match App
  .main-sign-in
    .main-sign-in__contents
      %h2<>Sign in
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          %label<>email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field"
        .field
          %label<>password
          %br/
          = f.password_field :password, class: "input-field"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .actions
          = f.submit "Sign in", class: "button-green"
      .other-buttons
        = link_to root_path, class: "back-top-btn" do
          %button.button-gray<>Back to top
        = link_to new_user_registration_path, class: "sign-up-btn" do
          %button.button-gray<>Sign up
  %footer
    %p<>App favicon by 
    = link_to "icon8", "#"

