.wrapper-sign-in
  %header.top
    = link_to "League Match App", root_path, class: "top__logo" 
  .main-sign-in
    .main-sign-in__contents
      %h2<>Sign in
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          %label<>email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field"
        .field
          %label<>password
          %br/
          = f.password_field :password, class: "input-field"
        - if devise_mapping.rememberable?
          .field.field-checkbox
            = f.check_box :remember_me, class: "field-checkbox__checkbox"
            = f.label :remember_me
        .actions
          = f.submit "Sign in", class: "button-green submit"
      .other-btns
        = link_to root_path, class: "back-top-btn btn-wrapper" do
          %button.button-gray<>Back to top
        = link_to new_user_registration_path, class: "sign-up-btn btn-wrapper" do
          %button.button-gray<>Sign up
  %footer.top
    %p<>App favicon by 
    = link_to "ios-filled", "https://icons8.jp/icon/pack/alphabet/ios-filled"
    %p<>,
    = link_to "icons8", "https://icons8.com/"

